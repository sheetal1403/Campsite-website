<% include partials/header %>


<div class="container">
	<header class="jumbotron">
				<h1>Welcome to CAMPING!</h1>
				<p>You can view all campgrounds here!</p>
				<a class = "btn btn-primary" href="/campgrounds/new">Add new campground</a>
	</header>
	
	<div class="row">
		<% campgrounds.forEach(function(cg){ %>
		<div class="col-md-3 col-sm-6">
			<div>
				
				<div class="thumbnail"><img src="<%=cg.image%>">
						
							<div class="caption"><h4><%= cg.name %></h4>
								<span><a class="btn btn-primary" href="/campgrounds/<%= cg._id %>">More details</a></span>
							</div>
							
						
						
					
					
				</div>
				
			</div>
			
		</div>
		
	<% }); %>
		
	</div>

	


	
</div>
	
	
<% include partials/footer %>

