<!DOCTYPE html>
<html>
	<head>
		<title>Yelpcamp</title>
		<link rel="stylesheet" href ="https://stackpath.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
		<link rel="stylesheet" style="text:css" href="/stylesheets/app.css"></link>
	</head>
	
	<body>
		<nav class="navbar navbar-default">
		<div class="container">
			<div class="navbar-header">
				 <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#abc" aria-expanded="false">
					<span class="sr-only">Toggle navigation</span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
			  </button>
				<a href="/" class="navbar-brand">YelpCamp</a>	
			</div>
			<div class="collapse navbar-collapse" id="abc">
				<ul class="nav navbar-nav navbar-right">
						<% if(!currentUser){ %>
							<li><a href="/register">Sign up</a></li>
							<li><a href="/login">Log in</a></li>
						<% } else{ %>
							<li><a href="#">Welcome <%= currentUser.username %></a></li>
							<li><a href="/logout">Log out</a></li>
						<% } %>
				</ul>
			</div>
		</div>	
	</nav>
		
		
	<div class="container">
		<% if( error && error.length>0){ %>
			<div class="alert alert-danger"><%= error %></div>
		<% } %>
		<% if( success && success.length>0){ %>
			<div class="alert alert-success"><%= success %></div>
		<% } %>
		
	</div>